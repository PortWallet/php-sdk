{
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "refund": {
            "$id": "/properties/order",
            "type": "object",
            "properties": {
                "amount": {
                    "$id": "/properties/order/properties/amount",
                    "type": "integer",
                    "title": "The Amount Schema ",
                    "minimum": 1,
                    "maximum": 1000000
                },
                "currency": {
                    "$id": "/properties/order/properties/currency",
                    "type": "string",
                    "title": "The Currency Schema ",
                    "enum": [
                        "BDT",
                        "USD"
                    ]
                },
                "reference": {
                    "$id": "/properties/order/properties/reference",
                    "type": "string",
                    "title": "The Currency Schema ",
                    "minLength": 2,
                    "maxLength": 100
                }
            },
            "required": [
                "amount"
            ]
        }
    },
    "required": [
        "refund"
    ]
}
